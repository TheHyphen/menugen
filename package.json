{
  "name": "menugen",
  "private": true,
  "scripts": {
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev": "pnpm run dev:frontend & pnpm run dev:backend",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "build": "pnpm --filter shared build && pnpm run build:frontend && pnpm run build:backend",
    "deploy:frontend": "pnpm --filter frontend deploy:pages",
    "deploy:backend": "pnpm --filter backend deploy",
    "typecheck": "pnpm -r typecheck"
  },
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "workerd"
    ]
  }
}